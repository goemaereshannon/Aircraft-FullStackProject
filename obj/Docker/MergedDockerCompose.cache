services:
  apigateway:
    build:
      context: C:\Users\alexi\Documents\School\MCT\FlightReservation\Aircraft-FullStackProject
      dockerfile: Gateway/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: http://+:80
    image: apigateway
    ports:
    - published: 32820
      target: 80
    volumes:
    - C:\Users\alexi\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\alexi\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  db:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: Password123
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1833
      target: 1433
    volumes:
    - C:\Users\alexi\AppData\Roaming\DockerVolumes\sqlserver:/var/opt/mssql/data:rw
  identityservices:
    build:
      context: C:\Users\alexi\Documents\School\MCT\FlightReservation\Aircraft-FullStackProject
      dockerfile: IdentityServices/Dockerfile
    container_name: IdentityServicesAircraft
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: http://+:80
    image: identityservicesaircraft
    ports:
    - published: 32808
      target: 80
    volumes:
    - C:\Users\alexi\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\alexi\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  rabbitmq:
    container_name: rabbitmq
    environment:
      RABBITMQ_DEFAULT_PASS: password
      RABBITMQ_DEFAULT_USER: user
    hostname: myrabbit
    image: rabbitmq:3-management
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
version: '3.4'